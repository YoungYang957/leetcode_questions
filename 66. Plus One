class Solution:
    def plusOne(self, digits: List[int]) -> List[int]:
        #we can also just transfer it to a int and transfer it back
        string = ""
        for numbers  in digits:
            string += str(numbers)


        temp = str(int(string)+1)
    
        return [int(temp[i]) for i in range(len(temp))]









